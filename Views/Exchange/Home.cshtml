<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Currencies Exchange</title>
    <link href="../../Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="~/Content/graph.css" rel="stylesheet" />
    <link href="~/Content/detail.css" rel="stylesheet" />
    <link href="~/Content/legend.css" rel="stylesheet" />
    <link href="~/Content/lines.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/Requests.js"></script>
    <script src="~/Scripts/chart/d3.v3.js"></script>
    <script src="~/Scripts/chart/d3.min.js"></script>
    <script src="~/Scripts/chart/rickshaw.js"></script>
    <script src="~/Scripts/chart/rickshaw.min.js"></script>
    <script src="~/Scripts/chart/Initializer.js"></script>
</head>
<body>

    <div class="container">
        <div class="div-header">
            <span id="spnHeader">Currency Exchange Tool</span>
        </div>

        <p />

        <div class="div-content">
            <table class="tblMain">
                <!-- This part of the table contais the dropdown lists to select the currencies-->
                <tr>
                    <td>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-secondary" type="button">Convert from</button>
                            </div>
                            <select class="custom-select" id="ddlFromCurrency" />
                        </div>
                    </td>

                    <td width="20px"></td>

                    <td><button id="btnSwap"><i class="fas fa-exchange-alt"></i></button></td>

                    <td width="20px"></td>

                    <td>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-secondary" type="button">To</button>
                            </div>
                            <select class="custom-select" id="ddlToCurrency" />
                        </div>
                    </td>
                </tr>

                <!-- This part of the table contais the input of the value to be exchanged -->

                <tr>
                    <td align="center">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-secondary" type="button">Amount</button>
                            </div>

                            <input type="number" min="0.01" step="0.05" value="1.0" id="txtAmount" class="form-control" placeholder="1.0">
                        </div>
                    </td>
                </tr>

                <tr>
                    <td></td>
                </tr>

                <tr></tr>
                <tr>
                    <td height="100px;" align="center">
                        <button type="button" id="btnConvert" class="btn btn-outline-dark">Convert</button>
                    </td>
                </tr>
            </table>

            <p />
            <!-- This part of the table Shows the result -->

            <div class="div-exchanged">
                <label id="lblCurrency" class="spnExchange" />
                <label id="lblValue" class="spnExchange" />
            </div>
        </div>

        <p />


        <div id="chart_container" style="visibility: hidden">
            <div id="chart" class="rickshaw_graph"></div>
            <div id="legend_container">
                <div id="smoother" title="Smoothing"></div>
                <div id="legend" class="rickshaw_legend"></div>
            </div>
            <div id="slider"></div>
        </div>

    </div>
</body>
</html>